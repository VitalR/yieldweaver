DO_SET_TARGETS=false
DO_SET_QUEUE=false
DO_REBALANCE=false
DO_WITHDRAW=false
DO_REDEEM=false
DO_APPROVE=true
DO_DEPOSIT=true
DO_INSPECT=false
WITHDRAW_BPS=0
WITHDRAW_ASSETS=0
WITHDRAW_ALL=false
REDEEM_SHARES=0
