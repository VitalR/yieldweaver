TOKENIZED_SAVINGS=0x9aCd869ae6cdB07994C65BAf46a4c9b58503764E   # YieldDonatingTokenizedStrategy (savings)

# ---------------------------------------------------------------------------
# Spark Savings Flow Toggles (shared by RunSparkSavingsYDSMainFlow)
# ---------------------------------------------------------------------------
DO_APPROVE=true
DO_DEPOSIT=true
DO_TEND=false
DO_REPORT=false
DO_WITHDRAW=false
WITHDRAW_ALL=false
WITHDRAW_BPS=0
WITHDRAW_ASSETS=0
SLEEP_SECONDS=0
DO_INSPECT=false
